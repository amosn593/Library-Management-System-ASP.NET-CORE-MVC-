@model IEnumerable<LibraryMs.Models.Form>

@{
    ViewData["Title"] = "Registered Forms";
}

<div class="container-fluid">


     <p class="display-6">REGISTERED FORMS</p>

<p>
    <a asp-action="Create" class="btn btn-success"> <i class="fas fa-plus" aria-hidden="true"></i> New Form</a>
</p>
<table class="table table-body">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        var tm = "#myModal" + item.Id;
        var mid = "myModal" + item.Id;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary mx-2">Edit</a> 
            
                    <!-- Button trigger modal -->
                     <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@tm">
                    Delete
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="@mid" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"  aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                   <h5 class="modal-title" id="staticBackdropLabel">Delete Confirmation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    
                                     <p class="my-3">Are you sure you want to delete this?</p>
                                      <form method="post" asp-action="Delete" asp-route-id="@item.Id" >
                                           <button type="submit" class="btn btn-danger mx-2">Delete </button>
                                           <button type="button" class="btn btn-success mx-2" data-bs-dismiss="modal">Cancel</button>
                                      </form>
                                </div>
                                <div class="modal-footer">
                                
                                </div>
                            </div>
                        </div>
                    </div>

            </td>

        </tr>
}
    </tbody>
</table>
</div>
